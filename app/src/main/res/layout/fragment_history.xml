<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.dashboard.ui.history.HistoryFragment">

    <LinearLayout
        android:id="@+id/pratice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_semua"
            style="@style/customButtonBlue"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:text="Semua"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_ujian"
            style="@style/customButtonTransparent"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:text="Ujian"
            app:layout_constraintStart_toEndOf="@+id/btn_semua"
            app:layout_constraintTop_toTopOf="@+id/btn_semua" />

        <Button
            android:id="@+id/btn_modul"
            style="@style/customButtonTransparent"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:text="modul"
            app:layout_constraintStart_toEndOf="@+id/btn_ujian"
            app:layout_constraintTop_toTopOf="@+id/btn_ujian" />

        <Button
            android:id="@+id/btn_praktik"
            style="@style/customButtonTransparent"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:text="Praktik"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_modul"
            app:layout_constraintTop_toTopOf="@+id/btn_modul" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:listitem="@layout/item_list"
        app:layout_constraintEnd_toEndOf="@+id/pratice_content"
        app:layout_constraintStart_toStartOf="@+id/pratice_content"
        app:layout_constraintTop_toBottomOf="@+id/pratice_content" />

</androidx.constraintlayout.widget.ConstraintLayout>