<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.sign.fragment.register.UserInfoFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/avatar_default" />

    <TextView
        android:id="@+id/ganti_foto"
        style="@style/regularTextBlue"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ganti_foto"
        app:layout_constraintEnd_toEndOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <EditText
        android:id="@+id/edt_fullname_userinfo"
        style="@style/inputBox"
        android:layout_marginTop="64dp"
        android:hint="Nama Lengkap"
        app:layout_constraintEnd_toEndOf="@+id/avatar"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/ganti_foto" />

    <EditText
        android:id="@+id/edt_username_userinfo"
        style="@style/inputBox"
        android:layout_marginTop="16dp"
        android:hint="@string/username"
        app:layout_constraintEnd_toEndOf="@+id/edt_fullname_userinfo"
        app:layout_constraintStart_toStartOf="@+id/edt_fullname_userinfo"
        app:layout_constraintTop_toBottomOf="@+id/edt_fullname_userinfo" />

    <Button
        android:id="@+id/next"
        style="@style/customButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="Lanjut"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/edt_username_userinfo"
        app:layout_constraintStart_toStartOf="@+id/edt_username_userinfo"
        app:layout_constraintTop_toBottomOf="@+id/edt_username_userinfo" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>