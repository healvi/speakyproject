<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_item_date"
                style="@style/regularTextGrayThin"
                android:text="@string/date"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_item_time"
                style="@style/regularTextGrayThin"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:text="@string/time"
                app:layout_constraintStart_toEndOf="@id/tv_item_date"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                style="@style/regularText"
                android:textSize="20sp"
                android:text="@string/score"
                app:layout_constraintTop_toBottomOf="@id/tv_item_date"
                app:layout_constraintStart_toStartOf="@id/tv_item_date"/>
            <TextView
                style="@style/regularTextBlueThin"
                android:textSize="12sp"
                android:text="@string/kategori"
                app:layout_constraintTop_toTopOf="@id/tv_item_date"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>